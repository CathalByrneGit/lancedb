LIBDIR = rust/target/release
STATLIB = $(LIBDIR)/liblancedb_r.a
PKG_LIBS = -L$(LIBDIR) -llancedb_r -lpthread -ldl -lm

# R can strip or reset PATH when spawning build subprocesses, so bare `cargo`
# may not be found.  We fix this by prepending the standard rustup binary
# directory to PATH in the recipe itself.  This works whether cargo is already
# on PATH or only installed under ~/.cargo/bin (the rustup default).

all: C_clean

$(SHLIB): $(STATLIB)

$(STATLIB):
	export PATH="$(HOME)/.cargo/bin:$$PATH" && \
	  cd rust && cargo build --release --lib

C_clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS)

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) rust/target
